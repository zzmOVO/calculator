<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main2Activity"
    tools:showIn="@layout/activity_main2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/screen"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_gravity="top"
                android:layout_marginBottom="20dp"
                android:gravity="right"
                android:paddingTop="38dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="60dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:paddingBottom="20dp"
                    android:singleLine="false"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <Button
                        android:id="@+id/length_btn"
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="m->cm"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/cos_btn"
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="Cos"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/sin_btn"
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="Sin"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/mi_btn"
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="^"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <Button
                        android:id="@+id/v_btn"
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="kg->g"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/erjinzhi_btn"
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="二"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/bajinzhi_btn"
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="八"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/shiliujinzhi_btn"
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="十六"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="+/-"
                        android:textSize="10dp" />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="+/-"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/zuokouohao_btn"
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="("
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/youkuohao_btn"
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text=")"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="+/-"
                        android:textSize="10dp" />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="+/-"
                        android:textSize="10dp" />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="+/-"
                        android:textSize="10dp" />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="+/-"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="+/-"
                        android:textSize="10dp" />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="+/-"
                        android:textSize="10dp" />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="+/-"
                        android:textSize="10dp" />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_style"
                        android:gravity="center"
                        android:text="+/-"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/clear_btn"
                                android:layout_width="50dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/h_button"
                                android:gravity="center"
                                android:text="C" />

                            <Button
                                android:id="@+id/lose_btn"
                                android:layout_width="50dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/h_button"
                                android:gravity="center"
                                android:text="+/-"
                                android:textSize="10dp" />

                            <Button
                                android:id="@+id/percent_btn"
                                android:layout_width="50dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/h_button"
                                android:gravity="center"
                                android:text="%" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/seven_btn"
                                android:layout_width="50dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/h_button_gary"
                                android:gravity="center"
                                android:text="7"
                                android:textColor="@color/white"
                                android:textSize="10dp" />

                            <Button
                                android:id="@+id/eight_btn"
                                android:layout_width="50dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/h_button_gary"
                                android:gravity="center"
                                android:text="8"
                                android:textColor="@color/white"
                                android:textSize="10dp" />

                            <Button
                                android:id="@+id/nine_btn"
                                android:layout_width="50dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/h_button_gary"
                                android:gravity="center"
                                android:text="9"
                                android:textColor="@color/white"
                                android:textSize="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/four_btn"
                                android:layout_width="50dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/h_button_gary"
                                android:gravity="center"
                                android:text="4"
                                android:textColor="@color/white"
                                android:textSize="10dp" />

                            <Button
                                android:id="@+id/five_btn"
                                android:layout_width="50dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/h_button_gary"
                                android:gravity="center"
                                android:text="5"
                                android:textColor="@color/white"
                                android:textSize="10dp" />

                            <Button
                                android:id="@+id/six_btn"
                                android:layout_width="50dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/h_button_gary"
                                android:gravity="center"
                                android:text="6"
                                android:textColor="@color/white"
                                android:textSize="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/one_btn"
                                android:layout_width="50dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/h_button_gary"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="10dp" />

                            <Button
                                android:id="@+id/two_btn"
                                android:layout_width="50dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/h_button_gary"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="@color/white"
                                android:textSize="10dp" />

                            <Button
                                android:id="@+id/three_btn"
                                android:layout_width="50dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/h_button_gary"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="@color/white"
                                android:textSize="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/zero_btn"
                                android:layout_width="125dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/button_style"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="10dp" />

                            <Button
                                android:id="@+id/point_btn"
                                android:layout_width="50dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/h_button_gary"
                                android:gravity="center"
                                android:text="."
                                android:textColor="@color/white"
                                android:textSize="10dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/divide_btn"
                            android:layout_width="50dp"
                            android:layout_height="38dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/h_button_orange"
                            android:gravity="center"
                            android:text="/"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/multiply_btn"
                            android:layout_width="50dp"
                            android:layout_height="38dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/h_button_orange"
                            android:gravity="center"
                            android:text="X"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/thelose_btn"
                            android:layout_width="50dp"
                            android:layout_height="38dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/h_button_orange"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/plus_btn"
                            android:layout_width="50dp"
                            android:layout_height="38dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/h_button_orange"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/equal_btn"
                            android:layout_width="50dp"
                            android:layout_height="38dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/h_button_orange"
                            android:gravity="center"
                            android:text="="
                            android:textColor="@color/white"
                            android:textSize="10dp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>